<%- include('common/header'); -%>
<!-- LESS файл -->
<!-- Написати: <link rel="stylesheet/less" type="text/css" href="less/***.less" /> -->
<!-- Якщо треба navbar => @import "navbar"; -->
<!-- Приклад -->
<link rel="stylesheet/less" type="text/css" href="less/myDeliveriesPage/myDeliveriesMain.less" />
<!-- Приклад -->
<!-- LESS JavaScript компілятор -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/less.js/2.5.3/less.min.js"></script>
</head>
<body>
<%- include('common/navbar'); -%>

<div id = "add-deliveries"></div>

<div id = "is-empty">
    No Deliveries to Display
</div>

<div class = "wrapper">
    <div class = "slideup-for-sort">
        Sorted by: <span>Delivery Status</span>
        <img id = "main-arrow-down" class = 'arrow-down' src = "images/arrowDown.png">
        <img id = "main-arrow-up" class = 'arrow-up' src = "images/arrowUp.png">
    </div>
    <div class = "sort-item" id = "date">
        Delivery Date
        <img id = "date-arrow-down" class = 'arrow-down' src = "images/arrowDown.png">
        <img id = "date-arrow-up" class = 'arrow-up' src = "images/arrowUp.png">
    </div>
    <div class = "sort-item" id = "cost">
        Delivery Cost
        <img id = "cost-arrow-down" class = 'arrow-down' src = "images/arrowDown.png">
        <img id = "cost-arrow-up" class = 'arrow-up' src = "images/arrowUp.png">
    </div>
    <div class = "sort-item" id = "dest">
        Destination
        <img id = "dest-arrow-down" class = 'arrow-down' src = "images/arrowDown.png">
        <img id = "dest-arrow-up" class = 'arrow-up' src = "images/arrowUp.png">
    </div>
    <div class = "sort-item" id = "status">
        Delivery Status
        <img id = "status-arrow-down" class = 'arrow-down' src = "images/arrowDown.png">
        <img id = "status-arrow-up" class = 'arrow-up' src = "images/arrowUp.png">
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="delivery-info" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel">Delivery Info</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <span>
                    Description: <span id = "modal-description"></span>
                    <input type = 'text' id = 'change-description'>
                </span> <br>
                <span>Destination: <span id = "modal-destination"></span></span> <br>
                <span>Date: <span id = "modal-date"></span></span> <br>
                <div id = 'position-cost'>Cost: <span id = "modal-cost"></span>₴</div>
                <span>Status: <span id = "modal-status"></span></span> <br>
                <span>Receiver: <span id = "modal-receiver"></span></span> <br>
                <span>Receiver's phone: <span id = "modal-phone"></span></span> <br>
                <span>Pays: <span id = "modal-payer"></span></span> <br>
                <span>Paid: <span id = "modal-paid"></span></span> <br>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id = 'modify-delivery'>Apply Changes</button>
                <button type="button" class="btn btn-success" data-dismiss="modal">Got it!</button>
            </div>
        </div>
    </div>
</div>

<%- include('common/footer'); -%>