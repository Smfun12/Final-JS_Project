<%- include('common/header'); -%>
<!-- LESS основний файл -->
<link rel="stylesheet/less" type="text/css" href="less/main.less" />
<!-- LESS JavaScript компілятор -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/less.js/2.5.3/less.min.js"></script>
</head>
<body>
<%- include('common/navbar'); -%>
<video autoplay muted loop id="myVideo">
    <source src="./videos/mainVideo.mp4" type="video/mp4">
</video>
<div class="container">
    <div class = "row justify-content-around" id = "top">
        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5 col-5" id = "top-left">
            <div class="glow-on-hover" id = 'my-dels'>
                <img src = './images/home-removebg-preview.png' class="main-image" >
                <div class = "option" id="my-dels-txt">My Deliveries</div>
            </div>
        </div>
        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5 col-5 col-offset-5" id = "top-right">
            <div class="glow-on-hover" id = 'new-del'>
                <img src = './images/postman-removebg-preview.png' class="main-image" style="width: 68px;">
                <div class = "option" id="new-del-txt">Order a Delivery</div>
            </div>
        </div>
    </div>
    <div class="row justify-content-around" id = "bottom">
        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5 col-5" id = "bottom-left">
            <div class="glow-on-hover" id = 'mini-shop'>
                <img src = './images/mi-removebg-preview.png' class="main-image" >
                <div class = "option" id="mini-shop-txt">Buy something?</div>
            </div>
        </div>
        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5 col-5 col-offset-5" id = "bottom-right">
            <div class="glow-on-hover" id = 'pay'>
                <img src = './images/credit_card.png' class="main-image" style="width: auto">
                <div class = "option" id="pay-txt">Pay for Delivery</div>
            </div>
        </div>
    </div>
</div>
<div id="myModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
        <div class="modal-header">
            <span class="close">&times;</span>
            <h2>Modal Header</h2>
        </div>
        <div class="modal-body">
        </div>
        <div class="modal-footer">
            <h2>Modal Footer</h2>
        </div>
    </div>

</div>
<%- include('common/footer'); -%>